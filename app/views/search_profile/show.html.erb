<%= render :partial => "/layout/header" %>
<body>
<%= render :partial => "/layout/navigation" %>
<%= render :partial => "/layout/body" %>
<section id="searchMainIV" class="container content-section text-center">
<div id="SEARCHMAINDIV">
  <h1>
    <b>
      <%= "SEARCH RESULTS" + @testString.to_s %>
    </b>
  </h1>
  <p>
    <%= flash[:notice] %>
    <div class="container">
    <% @users.each do |info| %>
      <div id="SEARCHDISPLAYDIV" class="col-md-4">
        <div class="search-img-block">
          <%if info!=nil%>
            <% if info.profile_picture? %>
                <%= link_to image_tag(info.profile_picture.url, :class => 'search-img'), show_profile_show_profile_path(:user_key => info.userKey)%>
            <% else %>
                <%= link_to image_tag("http://www.combonetwork.com/img/empty_profile.png"), show_profile_show_profile_path(:user_key => info.userKey) %>
            <% end %>
          <%end%>
        </div>
        <div id="SEARCHDISPLAYTEXT">
          <!--/name gender state profession
          -->
          <h2>
            <%if info!=nil%>
            <%= link_to "#{info.first_name} #{info.last_name}", show_profile_show_profile_path(:user_key => info.userKey) %>
              <%end%>
              <h3></h3>
            <!--/ %br
            -->
            <%= info.job_name %>
            
            <br/>
          </h2>
          <%if info!=nil%>
          <%= info.city + ", " + info.state %>
          <%end%>
            <br/>
          <!--/= link_to "Profile", search_profile_show_profile_path(info.userKey)
          -->
          <br>
          <%if info!=nil%>
          <%= truncate(info.bio, length: 80) %>
          <%end%>
          </br>
        </div>
      </div>
  <% end %>
  </div>
  </p>
</div>
</section>
<%= render :partial => "/layout/javascripts" %>
</body>
<%= render :partial => "/layout/footer" %>
