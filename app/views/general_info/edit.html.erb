<%= render :partial => "/layout/header" %>
<body>
<%= render :partial => "/layout/navigation" %>
  <%= render :partial => "/layout/body" %>
<section id="generalForm" class="container content-section text-center">
  <div id="GENERALFORM">
    <div id="NOTICE">
      <%= notice %>
    </div>
    <h1>
      <b>GENERAL INFORMATION</b>
    </h1>
    
    <div class="main-center" align="center">
      <%= form_for @general_info, :action => 'update', :url => general_info_update_path do |f| %>
        <div class="form-group">
			<div class="cols-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-user fa" style="font-size:20px" aria-hidden="true"></i></span>
                      <%= f.text_field :first_name, class: 'form-control', placeholder: 'Enter your First Name*'%>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  
                  <div class="cols-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-user fa" style="font-size:20px" aria-hidden="true"></i></span>
                      <%= f.text_field :last_name, class: 'form-control', placeholder: 'Enter your Last Name*' %>
                    </div>
                  </div>
                </div>
              <div class="form-group">
                                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-phone" style="font-size:20px" aria-hidden="true"></i></span>
                    <%= f.text_field :phone, class: 'form-control', placeholder: 'Phone Number*',type: "number"%>
                  </div>
                </div>
              </div>

                <div class="form-group">
                  
                  <div class="cols-sm-10">
                    <div class="input-group">
					<span class="input-group-addon"><i class="fa fa-calendar" style="font-size:20px" aria-hidden="true"></i></span>
                      
					<%= f.select :month_ofbirth, options_for_select([["Select Month of Birth*",""],["Jan","1"],["Feb","2"],["Mar","3"],["Apr","4"],["May","5"],["Jun","6"],["Jul","7"],["Aug","8"],["Sep","9"],["Oct","10"],["Nov","11"],["Dec","12"]], f.object.month_ofbirth || ""), {}, { :class => 'form-control' } %>
            
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  
                  <div class="cols-sm-10">
                    <div class="input-group">
					<span class="input-group-addon"><i class="fa fa-calendar" style="font-size:20px" aria-hidden="true"></i></span>
                      
					<%= f.select :day_ofbirth, options_for_select([["Select Day of Birth*",""],["01","1"],["02","2"],["03","3"],["04","4"],["05","5"],["06","6"],["07","7"],["08","8"],["09","9"],["10","10"],["11","11"],["12","12"],["13","13"],["14","14"],["15","15"],["16","16"],["17","17"],["18","18"],["19","19"],["20","20"],["21","21"],["22","22"],["23","23"],["24","24"],["25","25"],["26","26"],["27","27"],["28","28"],["29","29"],["30","30"],["31","31"]], f.object.day_ofbirth || ""), {} ,{ :class => 'form-control' } %>
           
                    </div>
                  </div>
                </div>

                <div class="form-group">
                                    <div class="cols-sm-10">
                    <div class="input-group">
					<span class="input-group-addon"><i class="fa fa-calendar" style="font-size:20px" aria-hidden="true"></i></span>
                      					<%= f.select :year_ofbirth, options_for_select([["Select Year of Birth*",""],["2017","2017"],["2016","2016"],["2015","2015"],["2014","2014"],["2013","2013"],["2012","2012"],["2011","2011"],["2010","2010"],["2009","2009"],["2008","2008"],["2007","2007"],["2006","2006"],["2005","2005"],["2004","2004"],["2003","2003"],["2002","2002"],["2001","2001"],["2000","2000"],["1999","1999"],["1998","1998"],["1997","1997"],["1996","1996"],["1995","1995"],["1994","1994"],["1993","1993"],["1992","1992"],["1991","1991"],["1990","1990"],["1989","1989"],["1988","1988"],["1987","1987"],["1986","1986"],["1985","1985"],["1984","1984"],["1983","1983"],["1982","1982"],["1981","1981"],["1980","1980"],["1979","1979"],["1978","1978"],["1977","1977"],["1976","1976"],["1975","1975"],["1974","1974"],["1973","1973"],["1972","1972"],["1971","1971"],["1970","1970"]], f.object.year_ofbirth || ""),{},{ :class => 'form-control' } %>
           
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  
                  <div class="cols-sm-10">
                    <div class="input-group">
					<span class="input-group-addon"><i class="fa fa-user-circle-o" style="font-size:20px" aria-hidden="true"></i></span>
                      
					<%= f.select :gender, options_for_select([["Select your Gender*",""],['Any', 'Any'], ['Male', 'Male'], ['Female', 'Female']], f.object.gender || ""),{},{ :class => 'form-control' }%>
            
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  
                  <div class="cols-sm-10">
                    <div class="input-group">
					<span class="input-group-addon"><i class="fa fa-map">  Select your Country<style="font-size:20px" aria-hidden="true"></i></span>
                      
					<%= f.select :country, options_for_select(CS.countries, f.object.country || ""),{},{ :class => 'form-control' } %>
           
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  
                  <div class="cols-sm-10">
                    <div class="input-group">
					<span class="input-group-addon"><i class="fa fa-location-arrow">   Select your State  <style="font-size:20px" aria-hidden="true"></i></span>
                      
					<%= f.select :state, options_for_select(CS.states(:us), f.object.state),{},{ :class => 'form-control' } %>
            
                    </div>
                  </div>
                </div>

                <div class="form-group">
                                    <div class="cols-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-map-marker fa" style="font-size:20px" aria-hidden="true"></i></span>
                      <%= f.text_field :city, :class => 'form-control', :placeholder=> 'Enter your City' %>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  
                  <div class="cols-sm-10">
                    <div class="input-group">
					<span class="input-group-addon"><i class="fa fa-dollar" style="font-size:20px" aria-hidden="true"></i></span>
                      
					<%= f.select :compensation, options_for_select([["Select type of Compensation", "Select type of Compensation"],["Any Payment", "Any Payment"],["Assignment Based","Assignment Based"],["Paid Only","Paid Only"]], f.object.compensation || "Any Payment"),{},{ :class => 'form-control' }%>
           
                    </div>
                  </div>
                </div>
                <div class="form-group">
                                    <div class="cols-sm-10">
                    <div class="input-group">
					<span class="input-group-addon"><i class="fa fa-facebook-official" style="font-size:20px" aria-hidden="true"></i></span>
                      <%= f.text_field :facebook_link, :placeholder=> 'Enter facebook profile link', :class => 'form-control'%>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  
                  <div class="cols-sm-10">
                    <div class="input-group">
					<span class="input-group-addon"><i class="fa fa-linkedin" style="font-size:20px" aria-hidden="true"></i></span>
                      <%= f.text_field :linkedIn_link, :placeholder=> 'Enter LinkedIn profile link', :class => 'form-control' %>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  
                  <div class="cols-sm-10">
                    <div class="input-group">
					<span class="input-group-addon"><i class="fa fa-safari" style="font-size:20px" aria-hidden="true"></i></span>
                      <%= f.text_field :personalWebsite_link, :placeholder=> 'Enter Personal Website Link', :class => 'form-control' %>
                    </div>
                  </div>
                </div>

		

                <div class="form-group">
                  
                  <div class="cols-sm-10">
                    <div class="input-group">
					<span class="input-group-addon"><i class="fa fa-paragraph" style="font-size:20px" aria-hidden="true"></i></span>
                      <%= f.text_area :bio, :placeholder=> 'Write briefly about yourself', :class => 'form-control' %>
                    </div>
                  </div>
                </div>

                

                <div class="form-group">
                  
                  <div class="cols-sm-10">
                    <div class="input-group">
						<span class="input-group-addon"><i class="fa fa-camera"> Add a Profile Picture<style="font-size:20px" aria-hidden="true"></i></span>
                      <%= f.file_field :profile_picture, accept: 'image/png,image/jpeg',:class => 'btn btn-default photo-upload' %>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  
                  <div class="cols-sm-10">
                    <div class="input-group">
						<span class="input-group-addon"><i class="fa fa-photo"> Add a Cover Picture <style="font-size:20px" aria-hidden="true"></i></span>
                      <%= f.file_field :cover_picture, accept: 'image/png,image/jpeg',:class => 'btn btn-default photo-upload' %>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  
                  <div class="cols-sm-10">
                    <div class="input-group">
						<span class="input-group-addon"><i class="fa fa-instagram"> Add a Gallery Picture<style="font-size:20px" aria-hidden="true"></i></span>
                      <%= f.file_field :gallery_pictures, multiple: true, accept: 'image/png,image/jpeg', :class => 'btn btn-default photo-upload'%>
                    </div>
                  </div>
                </div>
			
			

                <%= f.submit 'Update', :class => "btn btn-default"%>
    <% end %>
    <br>
    <%= button_to 'Cancel', '/show_profile', :method => 'get', :class => "btn btn-default"%>
  </div>
  </div>
</section>
<%= render :partial => "/layout/javascripts" %>
</body>
<%= render :partial => "/layout/footer" %>
